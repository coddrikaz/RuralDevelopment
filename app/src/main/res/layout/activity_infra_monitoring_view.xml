                        android:layout_weight="1"
                        android:paddingLeft="19dp"
                        android:textColor="@color/blue"
                        android:textSize="13dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
