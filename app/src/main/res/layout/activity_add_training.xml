<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="35dp"-->
<!--                    android:background="@drawable/spinner_background"-->
<!--                    android:layout_weight="1"/>-->
<!--            </LinearLayout>-->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training Name "
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etNameofTraining"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text"
                android:hint="Enter Training Name"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Trainer Name "
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etTrainerName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text"
                android:hint="Enter Trainer Name"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=" Training Date "
                android:layout_marginTop="10dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/etStartDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableRight="@drawable/calendar"
                android:background="@drawable/edit_text"
                android:hint="Enter Training Date"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=" Male"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/etMale"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:maxLength="3"
                android:background="@drawable/edit_text"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text=" Female"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />


            <EditText
                android:id="@+id/etFemale"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:maxLength="3"
                android:background="@drawable/edit_text"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text=" Total Participants"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/etTotalParticipants"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:maxLength="3"
                android:background="@drawable/edit_text"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Objective of the Training"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/etObjective"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/edit_text"
                android:gravity="center_vertical|top"
                android:paddingLeft="5dp"
                android:paddingTop="2.5dp"
                android:textColor="@color/black"
                android:textSize="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Upload Photo "
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_camera"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_baseline_camera_alt_24"
                    android:visibility="visible" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_camera1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="10dp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_camera2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="10dp"

                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_camera3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="10dp"
                    android:visibility="visible" />
            </RelativeLayout>

        </LinearLayout>


            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/btnSubmit"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_search"
                android:backgroundTint="@color/blue"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>